<UserControl x:Class="FullFeaturedMdiDemo.Common.DataGridFastResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:common="clr-namespace:FullFeaturedMdiDemo.Common"
             mc:Ignorable="d" >
    <Grid>
        <DataGrid x:Name="DGrid" AutoGenerateColumns="True" 
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserSortColumns="False" 
                  SelectionMode="Single" SelectionUnit="FullRow" GridLinesVisibility="None">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>

        <common:ErrorHint VerticalAlignment="Bottom" x:Name="ErrorMessageBox"/>
    </Grid>
    
</UserControl>
